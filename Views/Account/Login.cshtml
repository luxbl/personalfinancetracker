
@{
    ViewData["Title"] = "Login";
   
}

@if (ViewBag.Error != null)
{
    <p style="color: red;">@ViewBag.Error</p>
}
<div class="account-container">
    <div class="account-box">


<div class="text-center mt-0"><h2>PersonalFinanceTracker</h2>
<div class="mud-grid-item mud-grid-item-xs-12 mud-grid-item-sm-6">Welcome to Login page</div>
<form method="post">
    <div class="mb-3 d-flex justify-content-center">
        
        <input type="text" name="username" placeholder="username"/>
    </div>
    <div class="mb-3 d-flex justify-content-center text">
        
        <input type="password" name="password" placeholder="password"/>
    </div>
    <div class="d-flex justify-content-center">
    <button class="btn btn-primary mb-1" type="submit">Login</button>
    </div>
    
</form>
</div>
</main>
